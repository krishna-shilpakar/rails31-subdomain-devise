- if !can_sign_up?
- flash[:alert] = "Sign-up not permitted from a subdomain - quit mucking with the url"
- else
  %h2 Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    - if current_account
      = f.hidden_field :account_name, :value => current_account.name
      = f.hidden_field :account_id, :value => current_account.id
    - else
      %p
        = f.label :account
        %br/
        = f.text_field :account_name
    %p
      = f.label :name
      %br/
      = f.text_field :name
    %p
      = f.label :email
      %br/
      = f.text_field :email
    %p
      = f.label :password
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %p= f.submit "Sign up"
  = render :partial => "devise/shared/links"
